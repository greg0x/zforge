#!/usr/bin/env bash
set -euo pipefail

# Zforge Development CLI
# Single entry point for common development tasks

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
cd "$SCRIPT_DIR"

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m'

print_help() {
    echo "Zforge Development CLI"
    echo ""
    echo "Usage: ./dev <command>"
    echo ""
    echo "Services:"
    echo "  setup     Check tools, init submodules, configure remotes"
    echo "  up        Start all services (zebra + zaino)"
    echo "  stop      Stop all services"
    echo "  restart   Restart all services"
    echo "  status    Show service status"
    echo "  logs      Follow service logs"
    echo ""
    echo "Development:"
    echo "  build [--nu7]   Build zcash-devtool (--nu7 enables V6/tag support)"
    echo "  test            Run integration tests"
    echo ""
    echo "Git (multi-repo):"
    echo "  git status             Status across all repos"
    echo "  git branch <name>      Create feature branch"
    echo "  git checkout <branch>  Checkout branch across repos"
    echo "  git commit <msg>       Commit across submodules"
    echo "  git push               Push all repos"
    echo "  git sync               Fetch upstream, show drift"
    echo "  git reset <repo>       Reset repo branch to main"
    echo "  git diff [repo]        Show changes from main"
    echo ""
    echo "Onboarding:"
    echo "  fork      Fork all repos to your GitHub account"
    echo ""
    echo "Examples:"
    echo "  ./dev fork                           # Fork all repos (new contributor)"
    echo "  ./dev setup                          # First-time setup"
    echo "  ./dev up                             # Start services"
    echo "  ./dev git branch add-tag-field       # Start feature"
    echo "  ./dev build --nu7                    # Build with NU7/V6 support"
    echo "  ./dev git reset zebra --backup       # Reset zebra to main"
}

check_tool() {
    local tool=$1
    local install_hint=$2
    if command -v "$tool" &> /dev/null; then
        echo -e "  ${GREEN}âœ“${NC} $tool"
        return 0
    else
        echo -e "  ${RED}âœ—${NC} $tool - $install_hint"
        return 1
    fi
}

cmd_setup() {
    echo -e "${BLUE}ðŸ”§ Zforge Development Setup${NC}"
    echo ""
    
    # Check system dependencies (can't be installed via mise)
    echo "Checking system dependencies..."
    local missing=0
    
    check_tool "git" "Install git" || missing=1
    check_tool "cargo" "Install Rust: https://rustup.rs" || missing=1
    check_tool "tmux" "brew install tmux" || missing=1
    
    if [ $missing -eq 1 ]; then
        echo ""
        echo -e "${RED}Missing system dependencies. Install them and re-run ./dev setup${NC}"
        exit 1
    fi
    
    echo ""
    
    # Install tools via mise if available
    if command -v mise &> /dev/null; then
        echo "Installing tools via mise..."
        mise install
        echo -e "  ${GREEN}âœ“${NC} Tools installed (protoc, overmind, gh, jq, grpcurl)"
    else
        echo "Checking tools (install mise for automatic management)..."
        local tools_missing=0
        check_tool "protoc" "brew install protobuf" || tools_missing=1
        check_tool "overmind" "brew install overmind" || tools_missing=1
        check_tool "gh" "brew install gh (for ./dev fork)" || true
        check_tool "jq" "brew install jq" || true
        check_tool "grpcurl" "brew install grpcurl" || true
        
        if [ $tools_missing -eq 1 ]; then
            echo ""
            echo -e "${YELLOW}Tip: Install mise (https://mise.jdx.dev) to manage all tools automatically${NC}"
            echo -e "${RED}Missing required tools.${NC}"
            exit 1
        fi
    fi
    
    echo ""
    
    # Run existing setup script
    if [ -f "scripts/setup-dev-env.sh" ]; then
        echo -e "${BLUE}Running submodule setup...${NC}"
        bash scripts/setup-dev-env.sh
    else
        echo -e "${YELLOW}Warning: scripts/setup-dev-env.sh not found${NC}"
        echo "Initializing submodules manually..."
        git submodule update --init --recursive
    fi
    
    echo ""
    echo -e "${GREEN}âœ… Setup complete!${NC}"
    echo ""
    echo "Next steps:"
    echo "  1. ./dev build       # Build zcash-devtool (one time)"
    echo "  2. ./dev up          # Start services"
    echo "  3. ./dev test        # Verify everything works"
}

cmd_up() {
    echo -e "${BLUE}Starting services...${NC}"
    if ! command -v overmind &> /dev/null; then
        echo -e "${RED}Error: overmind not found. Install with: brew install overmind${NC}"
        exit 1
    fi
    overmind start -D
    echo -e "${GREEN}Services started. Use './dev logs' to follow output.${NC}"
}

cmd_stop() {
    echo -e "${BLUE}Stopping services...${NC}"
    if [ -S .overmind.sock ]; then
        overmind quit || true
        # Wait for overmind to exit
        for i in {1..10}; do
            [ ! -S .overmind.sock ] && break
            sleep 0.5
        done
    fi
    rm -f .overmind.sock
    echo -e "${GREEN}Services stopped.${NC}"
}

cmd_restart() {
    echo -e "${BLUE}Restarting services...${NC}"
    overmind stop || true
    rm -f .overmind.sock
    sleep 2
    overmind start -D
    echo -e "${GREEN}Services restarted.${NC}"
}

cmd_test() {
    echo -e "${BLUE}Running integration tests...${NC}"
    if [ -f "tests/integration_test.sh" ]; then
        bash tests/integration_test.sh
    else
        echo -e "${RED}Error: tests/integration_test.sh not found${NC}"
        exit 1
    fi
}

cmd_build() {
    local nu7_mode="${1:-}"
    
    if [ "$nu7_mode" = "--nu7" ]; then
        echo -e "${BLUE}Building zcash-devtool with NU7 features...${NC}"
        echo -e "${YELLOW}Note: NU7 is experimental and enables V6 transactions with tags${NC}"
        echo ""
        export RUSTFLAGS='--cfg zcash_unstable="nu7"'
        local features="--features tx_v6"
    else
        echo -e "${BLUE}Building zcash-devtool...${NC}"
        local features=""
    fi
    
    if [ -d "zcash-devtool" ]; then
        cd zcash-devtool
        cargo build --release $features
        cd ..
        echo -e "${GREEN}âœ… zcash-devtool built: ./zcash-devtool/target/release/zcash-devtool${NC}"
        if [ "$nu7_mode" = "--nu7" ]; then
            echo -e "${GREEN}   (with NU7/V6 support enabled)${NC}"
        fi
    else
        echo -e "${RED}Error: zcash-devtool directory not found${NC}"
        exit 1
    fi
}

cmd_status() {
    echo -e "${BLUE}Service Status${NC}"
    echo ""
    
    # Check overmind
    if pgrep -f "overmind" > /dev/null 2>&1; then
        echo -e "Overmind: ${GREEN}running${NC}"
        overmind echo 2>/dev/null || true
    else
        echo -e "Overmind: ${YELLOW}not running${NC}"
    fi
    
    echo ""
    
    # Check endpoints
    echo "Endpoints:"
    if curl -sf http://localhost:8080/ready > /dev/null 2>&1; then
        echo -e "  Zebra health:  ${GREEN}http://localhost:8080${NC}"
    else
        echo -e "  Zebra health:  ${RED}not responding${NC}"
    fi
    
    if nc -z localhost 8137 2>/dev/null; then
        echo -e "  Zaino gRPC:    ${GREEN}localhost:8137${NC}"
    else
        echo -e "  Zaino gRPC:    ${RED}not responding${NC}"
    fi
    
    if curl -sf http://localhost:18232 > /dev/null 2>&1; then
        echo -e "  Zebra RPC:     ${GREEN}localhost:18232${NC}"
    else
        echo -e "  Zebra RPC:     ${RED}not responding${NC}"
    fi
}

cmd_logs() {
    local service="${1:-}"
    if [ -n "$service" ]; then
        overmind echo "$service"
    else
        overmind echo
    fi
}

# --- Git Commands ---

SUBMODULES="orchard librustzcash zebra zaino zcash-devtool"

cmd_git_status() {
    echo -e "${BLUE}zforge${NC} (main repo)"
    git status -sb
    echo ""
    
    for sub in $SUBMODULES; do
        if [ -d "$sub" ]; then
            echo -e "${BLUE}$sub${NC}"
            (cd "$sub" && git status -sb)
            echo ""
        fi
    done
}

cmd_git_branch() {
    local name="${1:-}"
    if [ -z "$name" ]; then
        echo -e "${RED}Usage: ./dev git branch <name> [repos...]${NC}"
        echo "Example: ./dev git branch add-tag-field"
        echo "Example: ./dev git branch add-tag-field orchard librustzcash"
        exit 1
    fi
    shift
    
    # Default to protocol repos if none specified
    local repos="${*:-orchard librustzcash}"
    
    for repo in $repos; do
        if [ -d "$repo" ]; then
            echo -e "${BLUE}Creating feature/$name in $repo${NC}"
            (cd "$repo" && git checkout main && git pull origin main && git checkout -b "feature/$name")
        else
            echo -e "${YELLOW}Skipping $repo (not found)${NC}"
        fi
    done
    
    echo ""
    echo -e "${GREEN}âœ… Feature branches created${NC}"
    echo "Next: make changes, then ./dev git commit \"your message\""
}

cmd_git_commit() {
    local msg="${1:-}"
    if [ -z "$msg" ]; then
        echo -e "${RED}Usage: ./dev git commit \"commit message\"${NC}"
        exit 1
    fi
    
    local committed=""
    
    # Commit in each dirty submodule
    for sub in $SUBMODULES; do
        if [ -d "$sub" ]; then
            # Check if there are changes (staged or unstaged)
            if (cd "$sub" && ! git diff --quiet 2>/dev/null) || (cd "$sub" && ! git diff --cached --quiet 2>/dev/null); then
                echo -e "${BLUE}Committing in $sub${NC}"
                (cd "$sub" && git add -A && git commit -m "$msg")
                committed="$committed $sub"
            fi
        fi
    done
    
    # Update main repo with submodule pointers
    if [ -n "$committed" ]; then
        echo -e "${BLUE}Updating zforge main repo${NC}"
        git add $committed
        git commit -m "$msg"
        echo ""
        echo -e "${GREEN}âœ… Committed in:$committed + zforge${NC}"
    else
        echo -e "${YELLOW}No changes to commit in submodules${NC}"
        
        # Check if main repo has changes
        if ! git diff --quiet 2>/dev/null || ! git diff --cached --quiet 2>/dev/null; then
            echo -e "${BLUE}Committing in zforge main repo${NC}"
            git add -A && git commit -m "$msg"
            echo -e "${GREEN}âœ… Committed in zforge${NC}"
        fi
    fi
}

cmd_git_push() {
    # Push submodules first
    for sub in $SUBMODULES; do
        if [ -d "$sub" ]; then
            local branch
            branch=$(cd "$sub" && git rev-parse --abbrev-ref HEAD 2>/dev/null)
            if [ "$branch" != "HEAD" ] && [ -n "$branch" ]; then
                # Check if there are commits to push
                local ahead
                ahead=$(cd "$sub" && git rev-list --count "@{upstream}..HEAD" 2>/dev/null || echo "new")
                if [ "$ahead" != "0" ]; then
                    echo -e "${BLUE}Pushing $sub ($branch)${NC}"
                    (cd "$sub" && git push -u origin "$branch")
                fi
            fi
        fi
    done
    
    # Push main repo
    local main_ahead
    main_ahead=$(git rev-list --count "@{upstream}..HEAD" 2>/dev/null || echo "new")
    if [ "$main_ahead" != "0" ]; then
        echo -e "${BLUE}Pushing zforge main repo${NC}"
        git push
    fi
    
    echo -e "${GREEN}âœ… Push complete${NC}"
}

cmd_git_sync() {
    echo -e "${BLUE}Fetching upstream for all repos...${NC}"
    echo ""
    
    for sub in $SUBMODULES; do
        if [ -d "$sub" ]; then
            echo -e "${YELLOW}$sub${NC}"
            if (cd "$sub" && git remote get-url upstream &>/dev/null); then
                (cd "$sub" && git fetch upstream)
                local behind
                behind=$(cd "$sub" && git rev-list --count HEAD..upstream/main 2>/dev/null || echo "?")
                local ahead
                ahead=$(cd "$sub" && git rev-list --count upstream/main..HEAD 2>/dev/null || echo "?")
                echo -e "  upstream/main: ${GREEN}+$ahead${NC} / ${RED}-$behind${NC} commits"
            else
                echo -e "  ${YELLOW}(no upstream remote)${NC}"
            fi
            echo ""
        fi
    done
}

cmd_git_reset() {
    local repo="${1:-}"
    local keep_backup="${2:-}"
    
    if [ -z "$repo" ]; then
        echo -e "${RED}Usage: ./dev git reset <repo> [--backup]${NC}"
        echo "Example: ./dev git reset zebra --backup"
        echo ""
        echo "Resets a submodule's feature branch to main."
        echo "Use --backup to create a backup branch first."
        exit 1
    fi
    
    if [ ! -d "$repo" ]; then
        echo -e "${RED}Error: $repo not found${NC}"
        exit 1
    fi
    
    local current_branch
    current_branch=$(cd "$repo" && git branch --show-current)
    
    if [ "$current_branch" = "main" ]; then
        echo -e "${YELLOW}$repo is already on main${NC}"
        exit 0
    fi
    
    echo -e "${BLUE}Resetting $repo ($current_branch â†’ main)${NC}"
    
    # Create backup if requested
    if [ "$keep_backup" = "--backup" ]; then
        local backup_name="${current_branch}-backup-$(date +%Y%m%d)"
        echo "  Creating backup: $backup_name"
        (cd "$repo" && git branch "$backup_name" "$current_branch" 2>/dev/null || true)
    fi
    
    # Reset to main
    (cd "$repo" && \
        git checkout main && \
        git branch -D "$current_branch" 2>/dev/null || true && \
        git checkout -b "$current_branch")
    
    echo -e "${GREEN}âœ… $repo reset to main on branch $current_branch${NC}"
}

cmd_git_checkout() {
    local branch="${1:-}"
    shift || true
    local repos="${*:-$SUBMODULES}"
    
    if [ -z "$branch" ]; then
        echo -e "${RED}Usage: ./dev git checkout <branch> [repos...]${NC}"
        echo "Example: ./dev git checkout feature/tag-field"
        echo "Example: ./dev git checkout main orchard librustzcash"
        exit 1
    fi
    
    for repo in $repos; do
        if [ -d "$repo" ]; then
            if (cd "$repo" && git show-ref --verify --quiet "refs/heads/$branch"); then
                echo -e "${BLUE}$repo${NC}: checking out $branch"
                (cd "$repo" && git checkout "$branch")
            else
                echo -e "${YELLOW}$repo${NC}: branch $branch not found, skipping"
            fi
        fi
    done
}

cmd_git_diff() {
    local repo="${1:-}"
    
    if [ -z "$repo" ]; then
        # Show summary for all repos
        echo -e "${BLUE}Changes from main across all repos:${NC}"
        echo ""
        for sub in $SUBMODULES; do
            if [ -d "$sub" ]; then
                local commits
                commits=$(cd "$sub" && git rev-list main..HEAD --count 2>/dev/null || echo "0")
                local files
                files=$(cd "$sub" && git diff main --stat 2>/dev/null | tail -1 || echo "")
                if [ "$commits" != "0" ]; then
                    echo -e "${GREEN}$sub${NC}: $commits commits"
                    [ -n "$files" ] && echo "  $files"
                else
                    echo -e "${YELLOW}$sub${NC}: no changes from main"
                fi
            fi
        done
    else
        # Show detailed diff for one repo
        if [ -d "$repo" ]; then
            echo -e "${BLUE}Diff for $repo (main..HEAD):${NC}"
            (cd "$repo" && git diff main --stat)
            echo ""
            echo "Full diff:"
            (cd "$repo" && git diff main)
        else
            echo -e "${RED}Error: $repo not found${NC}"
            exit 1
        fi
    fi
}

cmd_git_log() {
    local repo="${1:-}"
    local count="${2:-10}"
    
    if [ -z "$repo" ]; then
        # Show recent commits for all repos with changes
        echo -e "${BLUE}Recent commits across repos (from main):${NC}"
        echo ""
        for sub in $SUBMODULES; do
            if [ -d "$sub" ]; then
                local commits
                commits=$(cd "$sub" && git rev-list main..HEAD --count 2>/dev/null || echo "0")
                if [ "$commits" != "0" ]; then
                    echo -e "${GREEN}$sub${NC} ($commits commits):"
                    (cd "$sub" && git log main..HEAD --oneline | head -5)
                    echo ""
                fi
            fi
        done
    else
        # Show log for specific repo
        if [ -d "$repo" ]; then
            echo -e "${BLUE}Commits in $repo (main..HEAD):${NC}"
            (cd "$repo" && git log main..HEAD --oneline -n "$count")
        else
            echo -e "${RED}Error: $repo not found${NC}"
            exit 1
        fi
    fi
}

cmd_git_files() {
    local repo="${1:-}"
    
    if [ -z "$repo" ]; then
        echo -e "${BLUE}Files changed from main across all repos:${NC}"
        echo ""
        for sub in $SUBMODULES; do
            if [ -d "$sub" ]; then
                local files
                files=$(cd "$sub" && git diff main --name-only 2>/dev/null)
                if [ -n "$files" ]; then
                    echo -e "${GREEN}$sub${NC}:"
                    echo "$files" | sed 's/^/  /'
                    echo ""
                fi
            fi
        done
    else
        if [ -d "$repo" ]; then
            echo -e "${BLUE}Files changed in $repo (from main):${NC}"
            (cd "$repo" && git diff main --name-only)
        else
            echo -e "${RED}Error: $repo not found${NC}"
            exit 1
        fi
    fi
}

cmd_git() {
    local subcmd="${1:-}"
    shift || true
    
    case "$subcmd" in
        status|st)
            cmd_git_status "$@"
            ;;
        branch|br)
            cmd_git_branch "$@"
            ;;
        commit|ci)
            cmd_git_commit "$@"
            ;;
        push)
            cmd_git_push "$@"
            ;;
        sync)
            cmd_git_sync "$@"
            ;;
        reset)
            cmd_git_reset "$@"
            ;;
        checkout|co)
            cmd_git_checkout "$@"
            ;;
        diff)
            cmd_git_diff "$@"
            ;;
        log)
            cmd_git_log "$@"
            ;;
        files)
            cmd_git_files "$@"
            ;;
        *)
            echo "Usage: ./dev git <command>"
            echo ""
            echo "Commands:"
            echo "  status           Show status across all repos"
            echo "  branch <name>    Create feature branch (default: orchard librustzcash)"
            echo "  checkout <branch> Checkout branch across repos"
            echo "  commit <msg>     Commit across dirty submodules + update main"
            echo "  push             Push all repos"
            echo "  sync             Fetch upstream, show ahead/behind"
            echo "  reset <repo>     Reset repo's branch to main (--backup to keep old)"
            echo "  diff [repo]      Show changes from main"
            echo "  log [repo]       Show commits from main"
            echo "  files [repo]     List changed files from main"
            echo ""
            echo "Examples:"
            echo "  ./dev git status"
            echo "  ./dev git branch add-tag-field"
            echo "  ./dev git checkout feature/tag-field"
            echo "  ./dev git commit \"Add tag field to Action\""
            echo "  ./dev git reset zebra --backup"
            echo "  ./dev git diff orchard"
            echo "  ./dev git log"
            ;;
    esac
}

# --- Fork Command ---

get_upstream() {
    local sub="$1"
    case "$sub" in
        zebra)        echo "ZcashFoundation/zebra" ;;
        zaino)        echo "zingolabs/zaino" ;;
        orchard)      echo "zcash/orchard" ;;
        librustzcash) echo "zcash/librustzcash" ;;
        zcash-devtool) echo "zcash/zcash-devtool" ;;
        *)            echo "" ;;
    esac
}

cmd_fork() {
    echo -e "${BLUE}ðŸ´ Zforge Fork Setup${NC}"
    echo ""
    echo "This will fork all Zforge repositories to your GitHub account"
    echo "and configure git remotes so you can push to your forks."
    echo ""
    
    # Check gh CLI
    if ! command -v gh &> /dev/null; then
        echo -e "${RED}Error: gh (GitHub CLI) not found${NC}"
        echo "Install with: mise install (or brew install gh)"
        exit 1
    fi
    
    # Check gh auth
    if ! gh auth status &>/dev/null; then
        echo -e "${RED}Error: Not logged into GitHub CLI${NC}"
        echo "Run: gh auth login"
        exit 1
    fi
    
    # Get GitHub username
    local github_user
    github_user=$(gh api user -q .login)
    echo -e "GitHub user: ${GREEN}$github_user${NC}"
    echo ""
    
    # Fork zforge main repo first
    echo -e "${BLUE}zforge${NC} (main repo, upstream: greg-nagy/zforge)"
    if gh repo view "$github_user/zforge" &>/dev/null; then
        echo -e "  ${GREEN}âœ“${NC} Fork exists"
    else
        echo -e "  Forking greg-nagy/zforge..."
        gh repo fork "greg-nagy/zforge" --clone=false
        echo -e "  ${GREEN}âœ“${NC} Forked"
    fi
    # Update origin to user's fork, add upstream
    git remote set-url origin "https://github.com/$github_user/zforge.git" 2>/dev/null || \
        git remote add origin "https://github.com/$github_user/zforge.git"
    if ! git remote get-url upstream &>/dev/null; then
        git remote add upstream "https://github.com/greg-nagy/zforge.git"
    fi
    echo -e "  ${GREEN}âœ“${NC} Remotes configured"
    echo ""
    
    # Fork each submodule
    for sub in $SUBMODULES; do
        local upstream
        upstream=$(get_upstream "$sub")
        if [ -z "$upstream" ]; then
            echo -e "${YELLOW}Skipping $sub (no upstream defined)${NC}"
            continue
        fi
        
        echo -e "${BLUE}$sub${NC} (upstream: $upstream)"
        
        # Check if fork already exists
        if gh repo view "$github_user/$sub" &>/dev/null; then
            echo -e "  ${GREEN}âœ“${NC} Fork exists"
        else
            echo -e "  Forking $upstream..."
            gh repo fork "$upstream" --clone=false
            echo -e "  ${GREEN}âœ“${NC} Forked"
        fi
        
        # Update submodule remote
        if [ -d "$sub" ]; then
            (cd "$sub" && git remote set-url origin "https://github.com/$github_user/$sub.git")
            # Add upstream if not exists
            if ! (cd "$sub" && git remote get-url upstream &>/dev/null); then
                (cd "$sub" && git remote add upstream "https://github.com/$upstream.git")
            fi
            echo -e "  ${GREEN}âœ“${NC} Remotes configured"
        else
            echo -e "  ${YELLOW}âš ${NC} Directory not found (run ./dev setup after forking)"
        fi
        echo ""
    done
    
    # Update .gitmodules to point to user's forks
    echo -e "${BLUE}Updating .gitmodules...${NC}"
    if [ -f ".gitmodules" ]; then
        sed -i.bak "s|github.com/greg-nagy/|github.com/$github_user/|g" .gitmodules
        rm -f .gitmodules.bak
        echo -e "  ${GREEN}âœ“${NC} .gitmodules updated to use your forks"
    fi
    echo ""
    
    echo -e "${GREEN}âœ… Fork setup complete!${NC}"
    echo ""
    echo "Your forks:"
    echo "  https://github.com/$github_user/zforge"
    for sub in $SUBMODULES; do
        echo "  https://github.com/$github_user/$sub"
    done
    echo ""
    echo "Next steps:"
    echo "  ./dev setup    # Initialize submodules with your forks"
    echo "  ./dev build    # Build zcash-devtool"
    echo "  ./dev up       # Start services"
    echo ""
    echo "Push your initial setup:"
    echo "  git add .gitmodules && git commit -m 'Configure forks for $github_user'"
    echo "  ./dev git push"
}

# Main
case "${1:-help}" in
    setup)
        cmd_setup
        ;;
    up|start)
        cmd_up
        ;;
    stop)
        cmd_stop
        ;;
    restart)
        cmd_restart
        ;;
    test)
        cmd_test
        ;;
    build)
        cmd_build "${2:-}"
        ;;
    status)
        cmd_status
        ;;
    logs)
        cmd_logs "${2:-}"
        ;;
    git)
        shift
        cmd_git "$@"
        ;;
    fork)
        cmd_fork
        ;;
    help|--help|-h)
        print_help
        ;;
    *)
        echo -e "${RED}Unknown command: $1${NC}"
        echo ""
        print_help
        exit 1
        ;;
esac
